<?xml version='1.0' encoding='UTF-8'?>
<addons>
    <addon id="plugin.program.wizard" name="[COLOR limegreen]Open[/COLOR]Wizard" version="1.0.0" provider-name="drinfernoo, slamious">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.requests" />
            <import addon="script.module.six" />
            <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
            <import addon="script.speedtester" optional="true" version="1.1.2" />
        </requires>

        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>executable</provides>
        </extension>

        <extension point="xbmc.service" library="startup.py" start="startup" />

        <extension point="xbmc.addon.metadata">
            <summary lang="en">[COLOR limegreen]Open[/COLOR]Wizard</summary>
            <description lang="en">[COLOR limegreen]Wizard[/COLOR] build installer.</description>
            <platform>all</platform>
            <reuselanguageinvoker>false</reuselanguageinvoker>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.png</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="repository.wizard" name="Installation Repository" version="1.0.0" provider-name="Wizard">
        <requires>
            <import addon="xbmc.addon" version="12.0.0" />
        </requires>
        <extension point="xbmc.addon.repository" name="Wizard Repository">
            <info compressed="false">https://zen704881.github.io/repo/addons.xml</info>
            <checksum>https://zen704881.github.io/repo/addons.xml.md5</checksum>
            <datadir zip="true">https://zen704881.github.io/repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repo</summary>
            <description>Installation Repo</description>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
